@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="wrapper">
    <div class="title"><span>Register</span></div>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="row">
            <input placeholder="Email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="row mt-8">
            <input placeholder="Password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="row mt-8">
            <input placeholder="Confirm password" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="current-password" aria-required="true"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="row button mt-4">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </div>
        <div class="form-help-links mt-2 d-flex flex-column justify-end">
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
