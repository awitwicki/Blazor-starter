@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="wrapper">
    <div class="title"><span>Login</span></div>
    <form id="account" method="post">
        <div class="row">
            <input placeholder="Email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="row mt-8">
            <input placeholder="Password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-4 mt-8">
            <label asp-for="Input.RememberMe" class="form-label d-flex align-center justify-end gap-1">
                <input class="form-check-input" asp-for="Input.RememberMe"/>
                <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
            </label>
        </div>
        <div class="row button">
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
        </div>
        <div class="form-help-links mt-2 d-flex flex-column justify-end">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
